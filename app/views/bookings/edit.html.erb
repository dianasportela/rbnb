<h1>this is the edit booking page</h1>

<div class="container">
  <h1>Edit <%= @booking.id %></h1>
  <%# PARTIALS %>
</div>


<div class="container">
  <div class="row col-6 mt-5">
    <%= simple_form_for(@booking) do |f| %>
    <%# adding the datepicker to the form %>
      <div data-toggle-target="errors">
        <%= f.error_notification %>
      </div>
      <%= f.input :date_start, as: :string, label: 'Check-in', input_html: { data: { controller: "datepicker"} }%>
      <%= f.input :date_end, as: :string, label: 'Check-out', input_html: { data: { controller: "datepicker"} }%>
      <%= f.button :submit, class: 'btn btn-primary my-custom-class', data: { turbo: true } %>
    <% end %>
  </div>
</div>
