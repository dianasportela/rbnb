<div class="row p-4">
    <div class="accordion m-0 p-0" id="myCastles">
      <% castle = @castle.id %>
      <% if @my_castles.length > 0 %>
        <div class="accordion-item">
          <h3 class="accordion-header" id="heading_<%= castle %>">
            <button class="accordion-button p-1" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= castle %>" aria-expanded="true" aria-controls="collapse_<%= castle %>">
              <h3 class="mb-0">My Castles:</h3>
            </button>
          </h3>
          <div id="collapse_<%= castle %>" class="collapse show" aria-labelledby="heading_<%= castle %>" data-bs-parent="#myCastles">
            <div class="accordion-body p-1" id="child<%= castle %>">
              <div class="accordion" id="sub-myCastles">
                <div class="accordion-item">
                  <% @my_castles.each do |my_castle| %>
                    <h4 class="accordion-header p-0" id="heading_<%= my_castle %>">
                      <button class="accordion-button p-1 m-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= my_castle %>" aria-expanded="true" aria-controls="collapse_<%= my_castle %>">
                        <h5 class="mb-0"><%= my_castle.castle_name %></h5>
                      </button>
                    </h4>
                    <div id="collapse_<%= my_castle %>" class="accordion-collapse collapse" labelledby="#heading_<%= my_castle %>" data-bs-parent="#sub-myCastles">
                      <div class="accordion-body collapse p-2" data-bs-parent="">
                        <table class="table table-sm">
                          <thead>
                            <tr>
                              <th scope="col">Who's renting:</th>
                              <th scope="col">Starting date</th>
                              <th scope="col">Ending date</th>
                              <th scope="col">Total revenue</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                            <% @bookings.each do |booking| %>
                              <td><%= booking.user.username %></td>
                              <td><%= booking.date_start %></td>
                              <td><%= booking.date_end %></td>
                              <td><%= "#{booking.price.to_i.to_fs(:delimited)} EUR" %></td>
                            <% end %>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
