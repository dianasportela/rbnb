<div class="container">

<%# --- USER NAME --- %>

  <h1><%#= @user.name %></h1>

<%# --- USER PROFILE PICTURE --- %>

  <div class="row ">
    <%#= @user.picture %>
  </div>

<%# --- AVERAGE RATING --- %>

  <div class="card">
    <strong>Average rating:</strong>
    <%#= @user.user_avg_rating %>
  </div>

<%# --- EMAIL --- %>

  <div class="card">
    <strong>Email:</strong>
    <%= @user.email %>
  </div>

<%# --- PASSWORD --- %>

  <div class="card">
    <strong>Password:</strong>
    <%= @user.password %>
  </div>

<%# --- OWNER? --- %>

  <%# if @user.owner?
    Owner
  else
    Customer
  end %>

<%# --- GO BACK --- %>

  <div class="row">
    <%= link_to "Back to search", users_path %>
  </div>
</div>
