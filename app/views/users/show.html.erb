<div class="container">

<%# --- USER NAME --- %>

  <h1><%= @user.name %></h1>

<%# --- USER PROFILE PICTURE --- %>

  <div class="row ">
    <%= @user.picture %>
  </div>

<%# --- AVERAGE RATING --- %>

  <div class="card">
    <strong>Average rating:</strong>
    <%= @user.avg_rating %>
  </div>

<%# --- EMAIL --- %>

  <div class="card">
    <strong>Email:</strong>
    <%= @user.email %>
  </div>

<%# --- PASSWORD --- %>

  <div class="card">
    <strong>Password:</strong>
    <%= @user.password %>
  </div>

<%# --- CASTLES --- %>

  <div>
    <strong>Castles:</strong>
    <% @user.castles.each do | castle | %>
      <div class="card">
          <%= castle.castle_name %>
      </div>
    <% end %>
  </div>

<%# --- BOOKINGS --- %>

  <div class= "container" >
    <div class="row text-uppercase">
      <h3> Your Bookings:</h3>
    </div>
    <div class="row">
      <div class = "cards">
        <% @bookings.each do |booking| %>
          <h5 class="card-header"><%= booking.castle.castle_name %></h5>
          <%= link_to user_session_path(booking), class: 'no_underline' do %>
            <div>
              <p>Start date: <%= booking.date_start %></p>
              <p>End date: <%= booking.date_end %></p>
              <p>Revenue: <%= "#{booking.price.to_i.to_fs(:delimited)} EUR" %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

<%# --- GO BACK --- %>

  <div class="row">
    <%= link_to "Back to search", user_session_path %>
  </div>
</div>
